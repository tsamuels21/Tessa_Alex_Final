<Spacer@Widget>:
    size_hint_x: 0.25



<Card@Widget>:
    size_hint_x: 2
    size_hint_y: 1
    image_file: "pic/red_back.png"

    canvas:
        Rectangle:
            source: self.image_file
            size: self.size
            pos: self.pos

<CustPopupLose>:
    size_hint_x: .5
    size_hint_y: None
    title: "You Lost"
    auto_dismiss: True
    id: popup
    Button:
        size_hint_y: None
        height: 40
        text: "Replay"
        on_press: popup.table.reset()

<CardTable>:
    id: table
    card2:card2
    card0:card0
    high: high
    low: low
    score: 0
    orientation: "vertical"

    BoxLayout:
        size_hint_y: 0.2
        Button:
            font_size: 20
            text: "Deal"
            on_press: root.hit_me_one()

    Widget:
        size_hint_y: 0.3
        id: me
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            font_size: 30
            color: (0, 0, 0, 1)
            text: "Score: " + str(root.score)
            size: me.size
            pos: me.pos

    BoxLayout:
        size_hint_y: 0.1

    BoxLayout:
        size_hint_y: 0.7
        Spacer:
        Card:
            id: card2
        Spacer:
        Card:
            id: card0
        Spacer:
    BoxLayout:
        size_hint_y: 0.1

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.4
        Button:
            font_size: 20
            size: [40, 40]
            text: "High"
            id: high
            on_press: root.high_check()

        Button:
            font_size: 20
            size: [40, 40]
            text: "Low"
            id: low
            on_press: root.low_check()



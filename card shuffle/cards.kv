<Spacer@Widget>:
    size_hint_x: 0.25

<Spacerr@Widget>:
    size_hint_y: 2

<Card@Widget>:
    size_hint_x: 2
    size_hint_y: 1
    image_file: "pic/gray_back.png"

    canvas:
        Rectangle:
            source: self.image_file
            size: self.size
            pos: self.pos

<CardTable>:
    BoxLayout:
        size_hint_y: 0.2
        Button:
            text: "Deal"
            on_press: root.hit_me_one()
    BoxLayout:
        size_hint_y: 0.4


<CardTable>:
    card2:card2
    card0:card0

    orientation: "vertical"
    BoxLayout:
        Spacer:
        Card:
            id: card2
        Spacer:
        Card:
            id: card0
        Spacer:
    BoxLayout:
        size_hint_y: 0.2


<CardTable>:
    high: high
    low: low
    BoxLayout:
        orientation: "horizontal"
        Button:
            size: [40, 40]
            text: "High"
            id: high
        Button:
            size: [40, 40]
            text: "Low"
            id: low

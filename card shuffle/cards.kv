<Spacer@Widget>:
    size_hint_x: 0.25

<Card@Widget>:
    size_hint_x: None
    size_hint_y: None
    image_file: "pic/gray_back.png"

    size: [350,500]
    canvas:
        Rectangle:
            source: self.image_file
            size: self.size
            pos: self.pos

<CardTable>:
    BoxLayout:
        size_hint_y: .2
        Button:
            text: "Deal"
            on_press: root.hit_me_one()


<CardTable>:
    card2:card2
    card0:card0

    orientation: "vertical"
    BoxLayout:
        Spacer:
        Card:
            id: card2
        Spacer:
        Card:
            id: card0
        Spacer:

